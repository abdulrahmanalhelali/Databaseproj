  	<display-name>Controller</display-name>
  	<description></description>
  	<servlet-class>edu.aydin.Controller</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>RegisterController</servlet-name>
  	<display-name>RegisterController</display-name>
