  	<servlet-name>RegisterController</servlet-name>
  	<url-pattern>/handle_register</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>AdminController</servlet-name>
  	<url-pattern>/admin_login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Order</servlet-name>
  	<url-pattern>/Order</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Addprod</servlet-name>
  	<url-pattern>/Addprod</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Delprod</servlet-name>
  	<url-pattern>/Delprod</url-pattern>
