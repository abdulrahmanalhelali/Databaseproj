  	<display-name>AdminController</display-name>
  	<description></description>
  	<servlet-class>edu.aydin.AdminController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Order</servlet-name>
  	<display-name>Order</display-name>
